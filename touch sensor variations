from machine import Pin,TouchPad
import time
t_pin= TouchPad(Pin(15, Pin.IN))
ledy= Pin(12, Pin.OUT)
ledr= Pin(14, Pin.OUT)
ledg= Pin(4, Pin.OUT)    
    
