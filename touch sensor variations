n=5
red_on= False
while n>0:
    t_value= t_pin.read()
    if t_value<300:
        ledr.on()
        ledy.off()
        print('Touched')
        
        if not red_on:
            n=n-1
            red_on = True
            print("Count Down:", n)
            
    else:
        ledy.on()
        ledr.off()
        red_on= False
        
    print(t_value)
    time.sleep(.2)

