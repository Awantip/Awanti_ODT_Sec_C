from machine import Pin
import random 
import time
import neopixel
np= neopixel.NeoPixel(Pin(4), 16)

while True:
    for i in range(16):
        a,b,c=random.randint(0,255),random.randint(0,255),random.randint(0,255)
        np[i]=(a,b,c)
        print(a,b,c)
        time.sleep(1)
        np.write()
